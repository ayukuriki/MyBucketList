<div class="page-container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "#{current_user.name}のリスト", mypage_path, class:"nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "みんなのリスト", sharepage_path, class:"nav-link" %>
    </li>
  </ul>
  <div class="inside-container">
    <div class="new-list">
      <%= link_to(new_list_path) do %> 
        <button type="button" class="btn btn-outline-success create-btn">+ 新規</button>
      <% end %>
    </div> 
    <div class="panel-container">
      <% @lists.each do |list| %>
        <% @category = @categories.find(list.category_id) %>
        <div class="list-panel">
          <%= render partial: 'category_check', locals: { category: @category } %>
          <div class="panel-lower">
            <h2><%= list.title %></h2>
            <span>メモ:</span>
            <p><%= list.description %></p>
            <p>目標期限：<%= list.target_year %>歳のとき</p>
            <div class= "public" >
              <%= list.public == true ? "公開" : "非公開" %>
            </div>
            <div class=" list-footer">
              <div class="achieved-button">
                <%= link_to  new_achieved_list_path(id: list.id) do %>
                  <button type="button" class="btn btn-outline-danger">達成！</button>
                <% end %>
              </div>
              <div class="list-icons">
                <div class="icon-link">
                  <%= link_to  edit_list_path(list), class: "edit-link" do  %>
                    <i class="fa-solid fa-pen-to-square"></i>
                  <% end %>
                </div>
                <div class="icon-link">
                  <%= link_to list_path(list.id), method: :delete, class: "delete-link" do %>
                    <i class="fa-solid fa-trash-can"></i>
                  <% end %>
                </div>
              </div>  
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
